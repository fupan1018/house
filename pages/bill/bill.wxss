.mask{
  width:100%;
  height:92%;
  position:fixed;
  background-color:#999;
  z-index:9999;
  top:0;
  left:0;
  opacity:0.5;
}
.bill-box{
  height:100%;
  border-top:1rpx solid #ddd;
  flex-direction:column;
}
.tab-bar{
  height:80rpx;
  line-height: 80rpx;
  border-bottom:1rpx solid #ccc;
  flex-direction:row;
  display:flex;
}
.default{
  height:80rpx;
  line-height: 80rpx;
  width:50%;
  border-right:1rpx solid #ddd;
  font-size:28rpx;
  text-align: center;
}
.blue{
  height:80rpx;
  line-height: 80rpx;
  width:50%;
  border-right:1rpx solid #ddd;
  font-size:28rpx;
  color:#1b86dd;
  text-align: center;
}
.show{
  display:block;
  text-align:center;
  height: 100%;
}
.hidden{
  display:none;
  text-align:center;
  height: 100%;
}
.bill-list{
  height:294rpx;
  border-bottom:1rpx solid #ddd;
}
.bill-money{
  height:54rpx;
  line-height: 54rpx;
  margin: 18rpx 0;
  font-size:26rpx;
  color: #656565;
}
.bill-money-l{
  float:left;
  margin-left:42rpx;
}
.bill-money-r{
  float:right;
  margin-right:40rpx;
}
.bill-date{
  height:112rpx;
  margin-left:42rpx;
}
.bill-date-list{
  height:50rpx;
  line-height:50rpx;
  font-size:24rpx;
  color:#999;
  text-align: left;
}
.bill-pay{
  width:166rpx;
  height:52rpx;
  line-height: 52rpx;
  text-align: center;
  float: right;
  font-size:24rpx;
  color: #fff;
  background: #38acff;
  border-radius: 30rpx;
  margin-right: 40rpx;
  margin-top:30rpx;
}
.bill-lists{
  height:200rpx;
  border-bottom:1rpx solid #ddd;
}
.bill-date-lists{
  height:50rpx;
  line-height:50rpx;
  font-size:24rpx;
  color:#999;
  text-align: left;
  display: inline-block;
}
.bill-date-list-r{
  float:right;
  margin-right:40rpx;
  font-size:24rpx;
  color:#999;
}
.pay-btn{
  position: absolute;
  bottom: 30rpx;
  left:45%;
  color: #5db52d;
  font-size:24rpx;
}